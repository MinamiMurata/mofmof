<div class="pd-l-3 pd-t-1">
  <p><strong>物件名: </strong><%= @property.name %></p>
  <p><strong>賃料: </strong><%= @property.rent %>円</p>
  <p><strong>住所: </strong><%= @property.address %></p>
  <p><strong>築年数 </strong><%= @property.age %>年</p>
  <p><strong>備考 </strong><%= @property.note %></p>
</div>
<hr>

<% @accesses.each do |access| %>
  <% if @property.accesses.any? %>
    <h3>最寄り駅</h3>
    <div class="pd-l-3 pd-t-1">
      <p><strong>路線名 </strong><%= access.line %></p>
      <p><strong>駅名 </strong><%= access.station %></p>
      <p><strong>徒歩分数 </strong><%= access.time %>分</p>
    </div>
  <% end %>
<% end %>

<p class="mt-1">
  <%= link_to '編集', edit_property_path %>｜
  <%= link_to '戻る', properties_path %>
</p>