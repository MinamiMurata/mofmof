<%= form_with(model: @property, local: true) do |form| %>
    <div class="mt-1"><%= form.label :name %></div>
    <div><%= form.text_field :name %></div>

    <div class="mt-1"><%= form.label :rent %></div>
    <div><%= form.text_field :rent %>円</div>

    <div class="mt-1"><%= form.label :address %></div>
    <div><%= form.text_field :address %></div>

    <div class="mt-1"><%= form.label :age %></div>
    <div><%= form.text_field :age %>年</div>

    <div class="mt-1"><%= form.label :note %></div>
    <div><%= form.text_area :note %></div>
    <hr>
  
  <div hidden><%= number = 0 %></div>
  <%= form.fields_for :accesses do |access| %>
    <h3><%= "最寄り駅#{number += 1}" %></h3>

    <div class="mt-1"><%= access.label :line %></div>
    <div><%= access.text_field :line %></div>

    <div class="mt-1"><%= access.label :station %></div>
    <div><%= access.text_field :station %></div>

    <div class="mt-1"><%= access.label :time %></div>
    <div><%= access.text_field :time %>分</div>

  <% end %>

  <div class="mt-1"><%= form.submit %></div>
<% end %>